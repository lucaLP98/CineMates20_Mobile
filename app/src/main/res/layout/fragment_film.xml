<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.FilmFragment">

    <EditText
        android:id="@+id/searchFilmEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/textfield_rounded_corner"
        android:drawableEnd="@drawable/ic_baseline_search_24"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/film_label_text_view"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/film_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/movie_label"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/filter_button"
        android:layout_width="83dp"
        android:layout_height="40dp"
        android:background="@drawable/button_background"
        android:text="@string/filters"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/searchFilmEditText"
        app:layout_constraintEnd_toStartOf="@+id/searchFilmEditText"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/film_label_text_view"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <android.widget.Button
        android:id="@+id/search_button"
        android:layout_width="83dp"
        android:layout_height="40dp"
        android:background="@drawable/button_background"
        android:text="@string/search"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/searchFilmEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.611"
        app:layout_constraintStart_toEndOf="@+id/searchFilmEditText"
        app:layout_constraintTop_toBottomOf="@+id/film_label_text_view"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/film_search_result_Recycle_view"
        android:layout_width="match_parent"
        android:layout_height="590dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/searchFilmEditText"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>