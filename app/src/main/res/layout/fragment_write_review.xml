<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.WriteReviewFragment"
    android:orientation="vertical" >

    <include
        android:id="@+id/toolbar_write_review_fragment"
        layout="@layout/toolbar_fragments" />

    <ImageView
        android:id="@+id/moviePosterWriteReviewImageView"
        android:layout_width="112.5sp"
        android:layout_height="180sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="15sp"
        android:layout_marginRight="15sp"
        android:layout_gravity="center"
        android:src="@android:drawable/sym_def_app_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reviewVoteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:gravity="center"
            android:text="@string/review_vote_label" />

        <EditText
            android:id="@+id/reviewVoteEditTextNumber"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="10sp"
            android:gravity="center"
            android:background="@drawable/textfield_rounded_corner"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/reviewTextEditTextTextMultiLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="start|top"
            android:layout_margin="10sp"
            android:background="@drawable/textfield_rounded_corner"
            android:inputType="textMultiLine" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/cancellPublishReviewButton"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:background="@drawable/button_background"
            android:text="@string/cancel"
            android:textColor="@color/white" />

        <android.widget.Button
            android:id="@+id/publishReviewButton"
            android:text="@string/publish_review"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:background="@drawable/button_background"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>