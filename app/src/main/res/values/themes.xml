<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CineMates20_Mobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Cinemate_yellow_clear</item>
        <item name="colorPrimaryVariant">@color/Cinemate_yellow_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Cinemates_blue_clear</item>
        <item name="colorSecondaryVariant">@color/Cinemates_blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="ToolbarThemeOverlay" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:fontFamily">@font/permanent_marker</item>
    </style>
</resources>